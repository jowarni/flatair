<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <form class="form-inline">
        <div class="form-group">
            <%= form_tag root_path, :method => 'get' do %>
            <%= text_field_tag :search, params[:search], class: "search-bar", placeholder: "Miami, Ibiza, Guingamp..."  %>
            <%= submit_tag("Go", class: "search-bar-go") %>
            <% end %>
        </div>
      </form>
    </div>
  </div>
</div>




