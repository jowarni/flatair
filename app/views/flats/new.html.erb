<div id="page">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <h2>Add a new flat</h2>

        <%= simple_form_for @flat, html: {multipart: true } do |t| %>
        <%= t.input :kind, label: 'Type of housing', placeholder:"Appartment, House, Villa..." %>
        <%= t.input :capacity, label: 'Capacity of your housing', placeholder:"--" %>
        <%= t.input :title, label: 'Title of your add', placeholder:"Say something nice" %>
        <%= t.input :description, label: 'Description of your add', placeholder:"Describe your flat" %>
        <%= t.input :price, label: 'Price per night', placeholder:"--- â‚¬" %>
        <%= t.input :street, label: 'Street address', placeholder:"10, rue de la Poste" %>
        <%= t.input :zip_code, label: 'Zip Code', placeholder:"75001" %>
        <%= t.input :city, label: 'City', placeholder:"Paris" %>
        <%= t.input :country, as: :string, label: 'Country', placeholder:"France"%>
        <%= t.file_field :picture %>
        <div class="text-center">
          <br>
          <%= t.button :submit, class: "btn-primary" %>
        </div>
        <%end%>
      </div>
      <br>
    </div>
    <br>
  </div>
</div>
</div>
