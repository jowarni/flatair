<div id="page">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <h2>Booking dates</h2>
        <%= simple_form_for [@flat, @booking] do |t| %>
        <p>
          <%= t.input :arrival, as: :date, label: 'Day of arrival' %>
        </p>
        <p>
          <%= t.input :departure, as: :date, label: 'Day of departure' %>
        </p>
      </p>
      <%= t.button :submit, class: "btn btn-primary btn-right" %>
      <%end%>
    </div>
  </div>
</div>
</div>

